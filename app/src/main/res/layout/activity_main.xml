<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiversActivity"
    android:orientation="vertical">

    <Button android:layout_gravity="center" android:id="@+id/btnStartService" android:text="Start service"
        android:layout_height="wrap_content" android:layout_width="wrap_content"/>
    <Button android:layout_gravity="center" android:id="@+id/btnStopService" android:text="Stop service"
        android:layout_height="wrap_content" android:layout_width="wrap_content"/>

</LinearLayout>